<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.support.AboutFragment" >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.support.AboutFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="133dp"
        android:layout_height="140dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/applogo"
        android:text="@string/login"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/text_view"
        android:layout_width="728dp"
        android:layout_height="50dp"
        android:fontFamily="cursive"
        android:gravity="center_horizontal"
        android:text="@string/who_are_we"
        android:textAlignment="center"
        android:textColor="#E91E63"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="728dp"
        android:layout_height="200dp"
        android:fontFamily="sans-serif-thin"
        android:gravity="center_horizontal"
        android:text="@string/we_are_a_group_of_ambitious_individuals_n_trying_to_make_the_lives_of_people_across_the_world_more_peaceful_by_bringing_together_the_cultures_of_the_world_we_are_extremely_resolute_towards_our_goal_and_this_culturaltravel_app_is_a_small_beginning_for_achieving_it_this_app_will_provides_you_the_opportunity_to_connect_with_other_people_and_enjoy_their_traditional_and_cultural_activities_occuring_in_your_nearby_places"
        android:textAlignment="center"
        android:textColor="#816D6D"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/text_view"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/rate"
        android:layout_width="728dp"
        android:textAlignment="center"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_2"
        android:text="@string/rate_us"
        android:textColor="#E91E63"
        android:textSize="24sp"
        tools:ignore="MissingConstraints" />



    <RatingBar
        android:id="@+id/rating"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:onClick="onClickRating"
        android:progressTint="@color/purple_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rate"
        tools:ignore="MissingConstraints,OnClick" />

    <TextView
        android:id="@+id/tv_4"
        android:layout_width="728dp"
        android:layout_height="40dp"
        android:textColor="#082AE4"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/rating"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:layout_width="728dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/world"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_4"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>