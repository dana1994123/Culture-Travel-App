<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    >

    <View
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/explore_nearby_event"
            android:textSize="30sp"
            android:layout_marginLeft="10dp"
            android:textColor="#eb5180"
            android:layout_marginStart="10dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/imgFirstEvent"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/infest"
                        android:layout_margin="20dp"/>
                    <ImageButton
                        android:id="@+id/imgSecondEvent"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/infest"
                        android:layout_margin="20dp"/>
                    <ImageButton
                        android:id="@+id/imgThirdEvent"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/infest"
                        android:layout_margin="20dp"/>
                    <ImageButton
                        android:id="@+id/imgFourthEvent"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/infest"
                        android:layout_margin="20dp"/>

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>

    <ImageView
        android:layout_width="393dp"
        android:layout_height="125dp"
        android:src="@drawable/logo" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/the_sky_is_the_limit"
        android:textSize="35dp"
        android:layout_marginLeft="10dp"
        android:textColor="#eb5180"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_home"
        android:layout_marginLeft="10dp"

        />
    <Button
        android:id="@+id/btnReadMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/read_more"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:layout_marginBottom="40dp"/>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffe57d"
        android:orientation="vertical">



        <!--to insert elements before the horizentalview-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:text="@string/explore_culture_with_fun"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="you can now have the apportunity to live other culture in your community" />

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

    </LinearLayout>




    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="0dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/linearLayout1"
            android:background="#ffe57d"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom">



            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="wrap_content"
                android:layout_height="270dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/frenchText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    android:text="French \nCulture"
                    android:textColor="#eb5180"
                    android:textSize="40dp" />


                <ImageButton
                    android:id="@+id/frenchImg"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:layout_margin="32dp"
                    android:src="@drawable/french"

                    />
                <TextView
                    android:id="@+id/indianText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="India \nCulture"
                    android:layout_margin="16dp"
                    android:textColor="#eb5180"
                    android:textSize="40dp" />


                <ImageButton
                    android:id="@+id/indianImg"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:src="@drawable/indian" />


                <TextView
                    android:id="@+id/italyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Italy \nCulture"
                    android:textColor="#eb5180"
                    android:layout_margin="16dp"
                    android:textSize="40dp" />


                <ImageButton
                    android:id="@+id/italyImg"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:src="@drawable/italy" />
            </LinearLayout>
        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:layout_height="match_parent"
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="#ffe57d"
        android:orientation="horizontal">

        <Button
            android:id="@+id/exploreBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/explore_all"
            android:layout_gravity="center"
            android:background="#eb5180"/>
    </LinearLayout>

    <View
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
</LinearLayout>






</ScrollView>